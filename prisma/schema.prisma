generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categorias {
  id        Int     @id @default(autoincrement())
  descricao String? @db.VarChar(100)
}

model filmes {
  id Int @id @default(autoincrement())
  titulo String @db.VarChar(130)
  diretor String @db.VarChar(130)
  elenco String?
  dataLancamento String @db.VarChar(10)
  sinopse String @db.VarChar(230)
  duracao Int 
  genero generos @relation(fields: [generoId], references: [id])
  generoId Int
}

model generos {
  id Int @id @default(autoincrement())
  descricao String @db.VarChar(50)
  filmes filmes[]
}

model funcionarios {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(130)
  email String @db.VarChar(130) @unique
  senha String @db.VarChar(130)
  dataAdmicao DateTime
  ativo Boolean @default(true)
}